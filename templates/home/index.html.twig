            d[l] ? console.warn(p + " only loads once. Ignoring:", g) : d[l] = (f, ...n) => r.add(f) && u().then(() => d[l](f, ...n))
        })({
            key: "AIzaSyBMO3LVl_v7xhApZEBfLfG0N6oU5yQUHjA",
            v: "weekly",
        });
    </script>
    <script src="/scripts/home.js"></script>
    <script src="/scripts/activity.js"></script>
{% endblock %}