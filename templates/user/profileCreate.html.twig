{% include 'base_logged.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="/styles/form.css">
{% endblock %}

{% block body %}
    <div class="content modify">
        <div class="overlay"></div>
        <div class="form-container">
            <h2>Modifier votre profil</h2>
            <span class="description">
                <p>Envie de mettre à jour vos informations personnelles ?</p>
                <p>Personnalisez votre profil pour mieux vous présenter à la communauté du campus !</p>
            </span>
            {{ form_start(form) }}

            <input type="hidden" name="_token" value="{{ csrf_token('form') }}">
            {{form_label(form.email)}}
            {{ form_widget(form.email) }}
            {{ form_label(form.firstName) }}
            {{ form_widget(form.firstName) }}
            {{ form_label(form.lastName) }}
            {{ form_widget(form.lastName) }}
            {{form_label(form.password)}}
            {{ form_widget(form.password) }}
            {{form_label(form.pseudo)}}
            {{ form_widget(form.pseudo) }}
            {{form_label(form.phone_number)}}
            {{ form_widget(form.phone_number) }}
            {{form_label(form.campus)}}
            {{ form_widget(form.campus) }}
            <button>Enregistré</button>
            {{ form_end(form, {'render_rest': false}) }}
        </div>
    </div>

{% endblock %}
